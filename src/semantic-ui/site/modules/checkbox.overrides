/*******************************
         Site Overrides
*******************************/

.ui.checkbox.error label {
  color: @red;
}

.ui.checkbox.disabled {
  pointer-events: none;
}

@toggleSize: 2rem;
.ui.checkbox.toggle {
  &.error input:checked ~ label {
    color: @red !important;
  }
  
  > input {
    height: @toggleSize;
  }

  > label {
    min-height: @toggleSize;
    padding-left: 5.5rem;
    &:before {
      height: @toggleSize;
      width: 4.2rem;
    }
    &:after {
      height: @toggleSize;
      width: @toggleSize;
    }
  }
}